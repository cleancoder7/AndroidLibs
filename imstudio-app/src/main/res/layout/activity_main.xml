<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <me.imstudio.core.ui.widgets.AnimatedToggleButton
        android:id="@id/button"
        android:layout_width="@dimen/icon_size_x5"
        android:layout_height="@dimen/icon_size_x5"
        android:layout_gravity="center"
        app:ims_animationSpeed="1"
        app:ims_iconSize="@dimen/icon_size_x5"
        app:ims_imageOff="@drawable/ic_favorite"
        app:ims_imageOn="@drawable/ic_favorite_press" />

    <me.imstudio.core.ui.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <me.imstudio.core.ui.ProgressBar
        android:layout_width="@dimen/icon_size_x4"
        android:layout_height="@dimen/icon_size_x4"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_x2"
        android:indeterminate="true"
        app:ims_progressTint="@android:color/holo_red_dark" />

    <me.imstudio.core.ui.Spinner
        android:id="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ims_arrowTint="@android:color/darker_gray"
        app:ims_backgroundDrawable="@drawable/ms_background_2"
        app:ims_fontSrc="@string/str_font_regular"
        app:ims_textColor="@android:color/darker_gray" />

</LinearLayout>