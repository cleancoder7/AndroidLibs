<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ToolBar">
        <attr name="ims_layoutType" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="ims_background" format="color" />
        <attr name="ims_backgroundType" format="enum">
            <enum name="color" value="0" />
            <enum name="drawable" value="1" />
        </attr>
        <attr name="ims_title" format="string" />
        <attr name="ims_titleColor" format="color" />
        <attr name="ims_drawableLeft" format="reference" />
        <attr name="ims_drawableRight" format="reference" />
    </declare-styleable>
    <declare-styleable name="IndicatorLayout">
        <attr name="ims_number" format="integer" />
        <attr name="ims_indicatorSize" format="dimension|reference" />
        <attr name="ims_margin" format="dimension|reference" />
        <attr name="ims_selectedBackground" format="reference" />
        <attr name="ims_unSelectedBackground" format="reference" />
    </declare-styleable>
    <declare-styleable name="AnimatedToggleButton">
        <attr name="ims_iconSize" format="dimension|reference" />
        <attr name="ims_imageOn" format="reference" />
        <attr name="ims_imageOff" format="reference" />
        <attr name="ims_primaryColor" format="reference" />
        <attr name="ims_secondaryColor" format="reference" />
        <attr name="ims_pressOnTouch" format="boolean" />
        <attr name="ims_animationSpeed" format="float" />
        <attr name="ims_circleSizeFactor" format="float" />
        <attr name="ims_imageTintOn" format="reference" />
        <attr name="ims_imageTintOff" format="reference" />
    </declare-styleable>
    <declare-styleable name="TextView">
        <attr name="ims_isStroke" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ProgressBar">
        <attr name="ims_progressTint" format="color" />
    </declare-styleable>
    <declare-styleable name="Spinner">
        <attr name="ims_fontSrc" format="string" />
        <attr name="ims_textColor" format="color" />
        <attr name="ims_arrowTint" format="color" />
        <attr name="ims_arrowHidden" format="boolean" />
        <attr name="ims_backgroundColor" format="color" />
        <attr name="ims_arrowDrawable" format="reference" />
        <attr name="ims_backgroundDrawable" format="reference" />
    </declare-styleable>
</resources>
