<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.IMS" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_text_medium</item>
        <item name="android:windowAnimationStyle">@style/StyleWindowAnimationTransition</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="StyleWindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.IMS.Selectable" parent="Theme.IMS">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Theme.IMS.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_icon_x4</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.IMS.ProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="Theme.IMS.Dialog.Anim.Grow" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="@android:windowEnterAnimation">@anim/anim_grow_in</item>
        <item name="@android:windowExitAnimation">@anim/anim_grow_out</item>
    </style>

    <style name="Theme.IMS.Dialog.Anim.Fade" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.IMS.Dialog.Content" parent="Theme.IMS">
        <item name="@android:layout_width">match_parent</item>
        <item name="@android:layout_height">wrap_content</item>
        <item name="@android:layout_gravity">center</item>
        <item name="@android:gravity">center</item>
        <item name="@android:ellipsize">end</item>
        <item name="@android:lineSpacingExtra">1dp</item>
        <item name="@android:maxLines">5</item>
        <item name="@android:minLines">2</item>
        <item name="android:textSize">@dimen/size_text_medium</item>
        <item name="android:textColor">@color/colorTextColorPrimary</item>
        <item name="@android:paddingTop">@dimen/margin</item>
        <item name="@android:paddingBottom">@dimen/margin</item>
        <item name="@android:paddingLeft">@dimen/margin_medium</item>
        <item name="@android:paddingRight">@dimen/margin_medium</item>
    </style>

    <style name="Theme.IMS.Menu.NonClick" parent="Theme.IMS">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextColorPrimary</item>
        <item name="android:paddingTop">@dimen/margin_extra_small</item>
        <item name="android:paddingBottom">@dimen/margin_extra_small</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Theme.IMS.Menu.Icon" parent="Theme.IMS">
        <item name="android:layout_width">@dimen/size_icon_x4</item>
        <item name="android:layout_height">@dimen/size_icon_x4</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <style name="Theme.IMS.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/all_style_dialog</item>
    </style>

</resources>