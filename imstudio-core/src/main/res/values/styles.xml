<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IMSTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_v1</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="IMSTheme.IconClick" parent="IMSTheme">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="IMSTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/icon_size_x4</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin_half</item>
        <item name="android:layout_marginLeft">@dimen/margin_half</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="IMSTheme.ProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="IMSTheme.Dialog.Anim.Grow" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="@android:windowEnterAnimation">@anim/anim_grow_in</item>
        <item name="@android:windowExitAnimation">@anim/anim_grow_out</item>
    </style>

    <style name="IMSTheme.Dialog.Anim.Fade" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="IMSTheme.Dialog.Content" parent="IMSTheme">
        <item name="@android:layout_width">match_parent</item>
        <item name="@android:layout_height">wrap_content</item>
        <item name="@android:layout_gravity">center</item>
        <item name="@android:gravity">center</item>
        <item name="@android:ellipsize">end</item>
        <item name="@android:lineSpacingExtra">1dp</item>
        <item name="@android:maxLines">5</item>
        <item name="@android:minLines">2</item>
        <item name="android:textSize">@dimen/text_size_v1</item>
        <item name="android:textColor">@color/colorTextColorPrimary</item>
        <item name="@android:paddingTop">@dimen/margin</item>
        <item name="@android:paddingBottom">@dimen/margin</item>
        <item name="@android:paddingLeft">@dimen/margin_x2</item>
        <item name="@android:paddingRight">@dimen/margin_x2</item>
        <item name="@android:textSize">@dimen/text_size_v2</item>
    </style>

    <style name="IMSTheme.MenuStyle.NonClick" parent="IMSTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_v1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextColorPrimary</item>
        <item name="android:paddingTop">@dimen/margin_half_s</item>
        <item name="android:paddingBottom">@dimen/margin_half_s</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="IMSTheme.MenuStyle.Icon" parent="IMSTheme">
        <item name="android:layout_width">@dimen/icon_size_x4</item>
        <item name="android:layout_height">@dimen/icon_size_x4</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

</resources>